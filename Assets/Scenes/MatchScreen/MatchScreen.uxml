                <engine:VisualElement name="player2-ability-cards" class="ability-cards">
                    <engine:VisualElement class="card ability-card template">
                        <engine:Label text="Ability Name" class="card-name" />
                        <engine:Label text="Ability Description" class="card-description" />
                        <engine:Label text="Cost: 2🛡️ 1💥" class="card-cost" />
                    </engine:VisualElement>
                </engine:VisualElement>
            </engine:VisualElement>
        </engine:VisualElement>
    </engine:VisualElement>
</engine:UXML>
